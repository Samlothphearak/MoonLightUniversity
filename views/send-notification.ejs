<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Send Notification</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 font-sans min-h-screen flex items-center justify-center">
    <div class="container mx-auto px-4">
        <!-- Page Header -->
        <header class="text-center mb-8">
            <h1 class="text-4xl font-bold text-blue-600">Send Notification</h1>
            <p class="text-gray-500 mt-2">Use the form below to send a notification to students.</p>
        </header>

        <!-- Form Section -->
        <section class="bg-white shadow-lg rounded-lg p-8 max-w-3xl mx-auto">
            <!-- Error Messages -->
            <% if (error) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6" role="alert">
                    <strong class="font-bold">Error:</strong>
                    <span>
                        <%= error %>
                    </span>
                </div>
            <% } %>

            <!-- Success Messages -->
            <% if (success) { %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6" role="alert">
                    <strong class="font-bold">Success:</strong>
                    <span>
                        <%= success %>
                    </span>
                </div>
            <% } %>

            <!-- Notification Form -->
            <form action="/send-notification" method="POST" class="space-y-6">
                <!-- Notification Title -->
                <div>
                    <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
                    <input type="text" name="title" id="title" placeholder="Enter notification title"
                        class="mt-2 p-3 w-full border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500"
                        required>
                </div>

                <!-- Notification Message -->
                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                    <textarea name="message" id="message" rows="4" placeholder="Enter notification message"
                        class="mt-2 p-3 w-full border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500"
                        required></textarea>
                </div>

                <!-- Select Recipients -->
                <div>
                    <label for="recipients" class="block text-sm font-medium text-gray-700">Recipients</label>
                    <select name="recipients" id="recipients"
                        class="mt-2 p-3 w-full border rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500"
                        required>
                        <option value="all">All Students</option>
                        <option value="specific">Specific Students</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                        class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold shadow-md hover:bg-blue-700 transition duration-300">
                        Send Notification
                    </button>
                </div>
            </form>
        </section>

        <!-- Footer -->
        <footer class="text-center mt-8">
            <a href="/dashboard" class="text-blue-600 hover:underline text-sm">Back to Dashboard</a>
        </footer>
    </div>
</body>

</html>
