<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Management System Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Tailwind CSS -->
    <link href="/css/output.css" rel="stylesheet">
    <!-- Tailwind CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- REMIX-ICON -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.css">
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />

    <!-- AOS JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
</head>

<body class="bg-gray-100 font-sans">

    <!-- Main Container -->
    <div class="flex h-screen">

        <!-- Sidebar -->
        <aside class="w-1/5 bg-blue-800 text-white flex flex-col space-y-6">
            <div class="px-6 py-4">
                <h1 class="text-2xl font-bold">School Dashboard</h1>
                <div class="mt-4">
                    <img class="w-12 h-12 rounded-full" src="https://via.placeholder.com/150" alt="Profile">
                    <p class="mt-2 font-medium">Admin</p>
                </div>
            </div>
            <nav class="mt-6 flex-1">
                <ul class="space-y-2">
                    <li><a href="#" class="block px-6 py-2 hover:bg-blue-700 rounded-md">Dashboard</a></li>
                    <li><a href="#" class="block px-6 py-2 hover:bg-blue-700 rounded-md">Students</a></li>
                    <li><a href="#" class="block px-6 py-2 hover:bg-blue-700 rounded-md">Teachers</a></li>
                    <li><a href="#" class="block px-6 py-2 hover:bg-blue-700 rounded-md">Classes</a></li>
                    <li><a href="#" class="block px-6 py-2 hover:bg-blue-700 rounded-md">Exams</a></li>
                </ul>
            </nav>
            <div class="px-6 py-4">
                <button class="w-full bg-red-600 py-2 rounded hover:bg-red-700">Logout</button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">

            <!-- Header -->
            <header class="mb-6 flex justify-between items-center">
                <h2 class="text-2xl font-semibold">Dashboard Overview</h2>
                <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Add New</button>
            </header>

            <!-- Quick Actions Section -->
            <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
                <% const actions=[ { name: 'Add New Student' , icon: 'ri-user-add-line' , color: 'text-blue-600' ,
                    link: '/add-student' }, { name: 'Create Assignment' , icon: 'ri-file-add-line' ,
                    color: 'text-green-600' , link: '/create-assignment' }, { name: 'Schedule Exam' ,
                    icon: 'ri-calendar-line' , color: 'text-yellow-600' , link: '/schedule-exam' }, {
                    name: 'Send Notification' , icon: 'ri-notification-line' , color: 'text-red-600' ,
                    link: '/send-notification' }, { name: 'Generate Report' , icon: 'ri-bar-chart-line' ,
                    color: 'text-purple-600' , link: '/generate-report' } ]; %>

                    <% actions.forEach(action=> { %>
                        <a href="<%= action.link %>"
                            class="bg-white p-4 rounded-lg shadow-lg hover:scale-105 transition-transform duration-300 cursor-pointer flex flex-col items-center">
                            <i class="<%= action.icon %> text-3xl <%= action.color %>"></i>
                            <h4 class="mt-2 font-medium text-center text-gray-800">
                                <%= action.name %>
                            </h4>
                        </a>
                    <% }) %>
            </section>

            <!-- Metrics Section -->
            <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                <!-- Card 1 -->
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-all">
                    <h3 class="text-lg font-medium">Total Students</h3>
                    <p class="mt-2 text-3xl font-bold text-blue-600">
                        <%= students.length %>
                    </p>
                </div>
                <!-- Card 2 -->
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-all">
                    <h3 class="text-lg font-medium">Teachers</h3>
                    <p class="mt-2 text-3xl font-bold text-blue-600">80</p>
                </div>
                <!-- Card 3 -->
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-all">
                    <h3 class="text-lg font-medium">Classes</h3>
                    <p class="mt-2 text-3xl font-bold text-blue-600">25</p>
                </div>
                <!-- Card 4 -->
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-all">
                    <h3 class="text-lg font-medium">Exams Scheduled</h3>
                    <p class="mt-2 text-3xl font-bold text-blue-600">10</p>
                </div>
            </section>

            <!-- Recent Activity Section -->
            <section class="mt-8">
                <h3 class="text-xl font-semibold mb-4">Recent Activity</h3>

                <div class="bg-white shadow-lg rounded-lg p-6 h-72 overflow-y-auto">
                    <ul class="space-y-4">
                        <!-- Activity Item -->
                        <li class="flex items-center space-x-4 p-3 rounded-lg shadow-sm bg-gray-50">
                            <div class="flex-shrink-0">
                                <i class="ri-check-line text-blue-500 text-2xl"></i>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-semibold text-gray-800">Completed assignment: "Mathematics Homework"</p>
                                <span class="text-xs text-gray-500">Just now</span>
                            </div>
                        </li>
                        <!-- Activity Item -->
                        <li class="flex items-center space-x-4 p-3 rounded-lg shadow-sm bg-gray-50">
                            <div class="flex-shrink-0">
                                <i class="ri-upload-2-line text-green-500 text-2xl"></i>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-semibold text-gray-800">Uploaded the project report: "Physics Lab Report"</p>
                                <span class="text-xs text-gray-500">10 minutes ago</span>
                            </div>
                        </li>
                        <!-- Activity Item -->
                        <li class="flex items-center space-x-4 p-3 rounded-lg shadow-sm bg-gray-50">
                            <div class="flex-shrink-0">
                                <i class="ri-message-2-line text-yellow-500 text-2xl"></i>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-semibold text-gray-800">Received feedback on "English Essay"</p>
                                <span class="text-xs text-gray-500">30 minutes ago</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </section>

        </main>
    </div>
</body>

</html>