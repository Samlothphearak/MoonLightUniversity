<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List - Royal University of Phnom Penh</title>
    <!-- Tailwind CSS -->
    <link href="/css/output.css" rel="stylesheet">
    <!-- Tailwind CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-50 font-sans">
    <div class="container mx-auto mt-10 px-4">
        <!-- Header Section -->
        <header class="text-center mb-8">
            <h1 class="text-4xl font-extrabold text-blue-600">Student List</h1>
        </header>

        <!-- Student Table -->
        <section class="mt-10">
            <h2 class="text-2xl font-bold text-gray-800 text-center mb-4">Student Details</h2>
            <div class="overflow-x-auto shadow-md rounded-lg bg-white">
                <table class="min-w-full table-auto border-collapse border border-gray-200">
                    <thead class="bg-blue-600 text-white">
                        <tr>
                            <th class="py-3 px-6 text-left font-semibold text-sm uppercase">Name</th>
                            <th class="py-3 px-6 text-left font-semibold text-sm uppercase">Email</th>
                            <th class="py-3 px-6 text-left font-semibold text-sm uppercase">Department</th>
                            <th class="py-3 px-6 text-center font-semibold text-sm uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-700">
                        <% if (students.length===0) { %>
                            <tr>
                                <td colspan="4" class="py-4 px-6 text-center text-gray-500">No students found</td>
                            </tr>
                            <% } else { %>
                                <% students.forEach(student=> { %>
                                    <tr class="hover:bg-gray-100 border-b border-gray-200">
                                        <td class="py-3 px-6">
                                            <%= student.name %>
                                        </td>
                                        <td class="py-3 px-6">
                                            <%= student.email %>
                                        </td>
                                        <td class="py-3 px-6">
                                            <%= student.department %>
                                        </td>
                                        <td class="py-3 px-6 text-center">
                                            <form action="/delete-student/<%= student._id %>" method="POST"
                                                class="inline">
                                                <button type="submit"
                                                    class="bg-red-500 text-white py-1 px-3 rounded hover:bg-red-600 transition">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>

        <footer class="text-center mt-10">
            <a href="/add-student" class="text-blue-600">Add a New Student</a>
        </footer>
    </div>
</body>

</html>