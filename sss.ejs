<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- REMIX-ICON -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.css">
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />

    <!-- AOS JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
</head>

<body class="bg-gray-50 font-sans min-h-screen">
    <div class="container mx-auto px-6 py-8">

        <!-- Header Section -->
        <header class="text-center mb-8">
            <h1 class="text-4xl font-bold text-green-700">Welcome, <%= student.firstName %>!</h1>
            <p class="mt-2 text-lg text-gray-600">Here's your dashboard overview.</p>
        </header>

        <!-- Dashboard Grid -->
        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Profile Section -->
            <div class="bg-white shadow-lg rounded-lg p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Your Profile</h2>
                <div class="flex items-center">
                    <img src="<%= student.photo %>" alt="Profile Picture" class="w-16 h-16 rounded-full mr-4">
                    <div>
                        <p class="text-lg font-bold text-gray-800"><%= student.firstName %> <%= student.lastName %></p>
                        <p class="text-sm text-gray-500"><%= student.email %></p>
                    </div>
                </div>
                <div class="mt-4">
                    <p class="text-sm text-gray-600"><strong>Phone:</strong> <%= student.phone %></p>
                    <p class="text-sm text-gray-600"><strong>Date of Birth:</strong> <%= new Date(student.dateOfBirth).toLocaleDateString() %></p>
                    <p class="text-sm text-gray-600"><strong>Address:</strong> <%= student.address %></p>
                </div>
                <div class="mt-4">
                    <a href="/edit-profile"
                        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                        Edit Profile
                    </a>
                </div>
            </div>

            <!-- Notifications Section -->
            <div class="bg-white shadow-lg rounded-lg p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Notifications</h2>
                <ul class="space-y-3">
                    <% notifications.forEach(notification => { %>
                    <li class="flex items-center">
                        <i class="ri-notification-2-line text-green-600 mr-3"></i>
                        <p class="text-sm text-gray-700"><%= notification.message %></p>
                    </li>
                    <% }) %>
                </ul>
                <div class="mt-4">
                    <a href="/notifications"
                        class="text-green-600 text-sm hover:underline">View all notifications</a>
                </div>
            </div>

            <!-- Courses Section -->
            <div class="bg-white shadow-lg rounded-lg p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Your Courses</h2>
                <ul class="space-y-3">
                    <% courses.forEach(course => { %>
                    <li class="flex items-center">
                        <i class="ri-book-line text-green-600 mr-3"></i>
                        <p class="text-sm text-gray-700"><%= course.name %></p>
                    </li>
                    <% }) %>
                </ul>
                <div class="mt-4">
                    <a href="/courses" class="text-green-600 text-sm hover:underline">View all courses</a>
                </div>
            </div>
        </section>

        <!-- Schedule Section -->
        <section class="bg-white shadow-lg rounded-lg p-6 mt-8">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Upcoming Schedule</h2>
            <table class="w-full text-left border-collapse">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-sm font-medium text-gray-600">Date</th>
                        <th class="px-4 py-2 text-sm font-medium text-gray-600">Time</th>
                        <th class="px-4 py-2 text-sm font-medium text-gray-600">Event</th>
                    </tr>
                </thead>
                <tbody>
                    <% schedule.forEach(item => { %>
                    <tr class="<%= item.isExam ? 'bg-red-50' : '' %>">
                        <td class="px-4 py-2 text-sm text-gray-700"><%= item.date %></td>
                        <td class="px-4 py-2 text-sm text-gray-700"><%= item.time %></td>
                        <td class="px-4 py-2 text-sm text-gray-700"><%= item.event %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>

    </div>
</body>

</html>
